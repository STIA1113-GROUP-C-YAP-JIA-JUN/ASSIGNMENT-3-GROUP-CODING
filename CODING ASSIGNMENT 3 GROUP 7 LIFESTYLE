				nameAcs[6] = "Camera Bag";
				nameAcs[7] = "Cleaning Kit";
				nameAcs[8] = "Wide Angle Lens(24mm-35mm)";
				nameAcs[9] = "Standard Lens(35mm-85mm)";
				nameAcs[10] = "Short Telephoto Lens(85mm-200mm)";
				
