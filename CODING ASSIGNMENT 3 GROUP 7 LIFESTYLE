			{
				
			if (buyAcs == 'Y' || buyAcs=='y')
			{
				String[] nameAcs = new String[11];
				nameAcs[0] = "Memory Card SanDisk Extreme 32GB";
				nameAcs[1] = "Memory Card SanDisk Extreme 64GB";
				nameAcs[2] = "Memory Card SanDisk Extreme 128GB";
